<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:alpha="0.5"
        android:contentDescription="@string/desc_empty_list"
        android:scaleType="centerInside"
        android:src="@drawable/img_empty_list" />

    <TextView
        android:id="@+id/text_empty"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:indeterminateTint="@color/colorAccent"
        android:letterSpacing="0.12"
        android:text="@string/empty_list"
        android:textSize="19sp"
        android:translationY="-16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_retry"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="32dp"
        android:text="@string/retry"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#19858585" />

    <ProgressBar
        android:id="@+id/progress_empty"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorAccent"
        android:translationY="-4dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_retry"
        app:layout_constraintStart_toStartOf="@+id/button_retry"
        app:layout_constraintTop_toBottomOf="@+id/button_retry"
        tools:visibility="visible" />

</LinearLayout>
